{
  "extends": [
    "tslint:latest"
  ],
  "rules": {
    "curly": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-classes-per-file": [
      false
    ],
    "max-line-length": [
      true,
      250
    ],
    "member-access": false,
    "no-console": [
      false
    ],
    "no-invalid-this": [
      true,
      "check-function-in-method"
    ],
    "no-object-literal-type-assertion": false,
    "object-literal-sort-keys": false,
    "ordered-imports": [
      false
    ],
    "prefer-for-of": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "radix": false,
    "trailing-comma": [
      false
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  }
}