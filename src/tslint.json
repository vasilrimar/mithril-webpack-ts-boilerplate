{
	"extends": [
		"tslint:latest"
	],
	"rules": {
		"curly": false,
		"indent": [
			true,
			"spaces",
			2
		],
		"member-access": false,
		"no-invalid-this": [
			true,
			"check-function-in-method"
		],
		"variable-name": [
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		],
		"max-classes-per-file": [
			false
		],
		"max-line-length": [
			true,
			250
		],
		"object-literal-sort-keys": false,
		"ordered-imports": [
			false
		],
		"no-console": [
			false
		],
		"no-object-literal-type-assertion": false,
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"prefer-for-of": false,
		"radix": false,
		"trailing-comma": [
			false
		]
	}
}